define me = Character("Me",color="#23bac4")
define empl = Character("Empleado",color="#02ac66")
init:
    $precio=0
    $dinero=62
screen dinero():
    frame:
        xalign 0 ypos 0
        vbox:
            text "Dinero:"
            text "     [dinero]"
#codigo base del juego
label start:
    play music "musicachill.mp3"

    scene local with fade
    show screen dinero
    me "tengo ganas de un cafe"
    me "oh... un starbucks, es un poco caro pero es mejor que nada"
    "entras al starbucks."

    scene fondo2 with fade
    play sound "campanillas.mp3"
    "te diriges al mostrador"
    "..."
    scene fondo3 with fade
    "......"
    show trabajador2 at right with dissolve
    empl "buenas tardes señor"
    me "buenas tardes"
    empl "digame, que va a ordenar?"
    me "umhhh... no estoy seguro"
    empl "puedo enseñarle el menu si gusta"
    me "si, eso estaria bien"

    label escoger:
        empl "Aqui tiene el menu"
        menu:
            "bebidas":
                label bebidas:
                    menu:
                        empl "tenemos una gran variedad de bebidas"
                        "Bebidas calientes":
                            jump bebidascalientes
                        "Frappuccino":
                            jump frappuccino
                        "Bebidas frias":
                            jump bebidasfrias
                        "Bebidas a base de Té":
                            jump te
                        "Cold brew":
                            jump coldbrew
                        "Volver":
                            jump escoger

        return
    return
#label para mostrar la seccion de bebidas calientes
label bebidascalientes:
    menu:
        empl "muy buenas para calentar el cuerpo"
        "Expresso y cafe $10":
            $precio+=10
            menu:
                "Expreso americano":
                    empl "El clasico"
                    jump estaseguro
                "Volver":
                    $precio-=precio
                    jump bebidascalientes

        "Expresso tradicional $15":
            $precio+=15
            menu:
                "Latte macchiato":
                    jump estaseguro
                "Flat white":
                    jump estaseguro
                "Mocha blanco":
                    jump estaseguro
                "Mocha":
                    jump estaseguro
                "Caramel macchiato":
                    jump estaseguro
                "Cappuccino":
                    jump estaseguro
                "Latte":
                    jump estaseguro
                "Volver":
                    $precio-=precio
                    jump bebidascalientes

        "Alternativas al cafe $17":
            $precio+=17
            menu:
                "Chocolate caliente":
                    jump estaseguro
                "Chocolate blanco":
                    jump estaseguro
                "Chocolate 100% Mexicano":
                    empl "Orgullosamente Mexicano eh? :)"
                    jump estaseguro
                "Volver":
                    $precio-=precio
                    jump bebidascalientes
        "Volver":
            jump bebidas
    return
#label para mostrar la seccion de frappuccinos
label frappuccino:
    menu:
        empl "Dulces y espumosos"
        "Frappuccino cafe $20":
            $precio+=20
            menu:
                "Chocolate blanco":
                    jump estaseguro
                "Cajeta":
                    jump estaseguro
                "Chip":
                    jump estaseguro
                "Mocha blanco":
                    jump estaseguro
                "Mocha":
                    jump estaseguro
                "Expresso":
                    jump estaseguro
                "Cafe":
                    jump estaseguro
                "Caramel":
                    jump estaseguro
                "Volver":
                    $precio-=precio
                    jump frappuccino

        "Frappuccino crema $22":
            $precio+=22
            menu:
                "Cajeta cream":
                    jump estaseguro
                "Vainilla cream":
                    jump estaseguro
                "Piñacoco cream":
                    jump estaseguro
                "Fresa cream":
                    jump estaseguro
                "Volver":
                    $precio-=precio
                    jump frappuccino
        "Volvar":
            jump bebidas
    return
#label para mostrar la seccion de bebidas frias
label bebidasfrias:
    menu:
        empl "Sabrosas y refrescantes"
        "shakens $16":
            $precio+=16
            menu:
                "Shaken black tea":
                    jump estaseguro
                "Shaken green tea":
                    jump estaseguro
                "Hibiscus shaken lemon tea":
                    jump estaseguro
                "Volver":
                    $precio-=precio
                    jump bebidasfrias

        "Refreshers $15":
            $precio+=15
            menu:
                "Star drink":
                    jump estaseguro
                "Dragon drink":
                    jump estaseguro
                "Pink drink":
                    jump estaseguro
                "Volver":
                    $precio-=precio
                    jump bebidasfrias

        "Starbucks con hielo $17":
            $precio+=17
            menu:
                empl "Lo mismo pero con hielo"
                "Mocca helado":
                    jump estaseguro
                "Chocolate Mexicano helado":
                    jump estaseguro
                "Cafe helado":
                    jump estaseguro
                "Latte helado":
                    jump estaseguro
                "Volver":
                    $precio-=precio
                    jump bebidasfrias
        "Volver":
            jump bebidas
    return
#label para mostrar la seccion de bebidas a base de Té
label te:
    menu:
        empl "Un buen Té para una buen Hombre"
        "Té latte caliente $10":
            $precio+=10
            menu:
                "Matcha green tea latte":
                    jump estaseguro
                "Volver":
                    $precio-=precio
                    jump te

        "Té helado $12":
            $precio+=12
            menu:
                "Emperors clouds & mist helado":
                    jump estaseguro
                "Volver":
                    $precio-=precio
                    jump te

        "Infusiones con tes de hoja entera $20":
            $precio+=20
            menu:
                "Chai":
                    jump estaseguro
                "Chai helado":
                    empl "Lo mismo pero frio"
                    jump estaseguro
                "Volver":
                    $precio-=precio
                    jump te

        "Té concentrado $18":
            $precio+=18
            menu:
                "Chai latte":
                    jump estaseguro
                "Volver":
                    $precio-=precio
                    jump te
        "Volver":
            jump bebidas
    return
#label para mostrar la seccion de cold brew
label coldbrew:
    me "Que es c-cold brew?"
    empl "Cafe..."
    me "......"
    empl"........"
    menu:
        empl "La verdad no sé que sea esto"
        "starbucks con hielo $30":
            $precio+=30
            menu:
                "Vainilla sweet cream cold brew":
                    jump estaseguro
                "Cold brew":
                    jump estaseguro
                "Volver":
                    $precio-=precio
                    jump coldbrew
        "Volver":
            jump bebidas
    return
#codigo que desencadena el dialogo para confirmar la compra del producto
label estaseguro:
    empl "Esta seguro?"
    menu:
        "si":
            if dinero>=precio:
                $dinero-=precio
                play sound "dinero.mp3"
            else:
                me "(No tengo suficiente dinero)"
            $precio-=precio
            jump seriatodo
        "no":
            empl "Tomese su tiempo"
            $precio-=precio
            jump escoger

    return
#codigo que desencadena el dialogo para confirmar la compra total de todos los productos elegidos por el jugador
label seriatodo:
    empl "Seria todo?"
    menu:
        "si":
            jump pagar
        "no":
            jump escoger
    return
#codigo que desencadena el dialogo final antes de que se termine el juego
label pagar:
    empl "Que tenga un buen dia"
    me "Gracias"

    return


return
